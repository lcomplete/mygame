<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MineSweeping.Cell"
	>

	<Canvas>
		<Border BorderThickness="2,2,2,2" x:Name="cellBorder">
			<Border.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="#FFF2F2F2" Offset="1"/>
				</LinearGradientBrush>
			</Border.Background>
			<Border.BorderBrush>
				<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
					<GradientStop Color="#FFF9F9F9"/>
					<GradientStop Color="#FF9F9898" Offset="1"/>
				</LinearGradientBrush>
			</Border.BorderBrush>
		    <Rectangle Fill="#FFC5C2C2" Height="12" Width="12" x:Name="cellRectangle"/>
		</Border>
	</Canvas>
</UserControl>